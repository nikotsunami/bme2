<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:n="urn:import:medizin.client.a_nonroo.app.client"
	xmlns:d="urn:import:com.google.gwt.user.datepicker.client" >
	<ui:style src="../../styles.css" />
    
 <g:HTMLPanel>
 
 <div class="{style.boundary}">
			<table class="{style.details}" cellpadding="0" cellspacing="0">



				<tr>
					<td class="{style.header}">

						<div class="{style.header}" visible="false" ui:field="editTitle">
							<ui:msg>Prüfung bearbeiten</ui:msg>
						</div>
						<div class="{style.header}" visible="false" ui:field="createTitle">
							<ui:msg>Neue Prüfung erstellen</ui:msg>
						</div>

					</td>
					<td class="{style.bar}">
						<div>

							<g:Button addStyleNames="{style.button}" ui:field="save">
								<span class="ui-icon ui-icon-disk" style="float: left; margin-right: 0.3em;"></span>
								Prüfung speichern
							</g:Button>
							<g:Button addStyleNames="{style.button}" ui:field="cancel">
								<span class="ui-icon ui-icon-closethick" style="float: left; margin-right: 0.3em;"></span>
								Bearbeiten abbrechen
							</g:Button>

						</div>
					</td>
				</tr>
				<tr>
					<td colspan="2">
						 <table class="{style.fields}" id="boundElementHolder">
						      <tr id="name">
						                <td>
						                    <div class="{style.label}">Name der Prüfung:</div>
						                </td>
						                <td>
						                    <g:TextBox ui:field="name"/>
						                </td>
						            </tr>
						      <tr id="dateOfAssesment">
						                <td>
						                    <div class="{style.label}">Findet statt am:</div>
						                </td>
						                <td>
						                    <d:DateBox ui:field="dateOfAssesment"/>
						                </td>
						                
						            </tr>
						      <tr id="dateOpen">
						                <td>
						                    <div class="{style.label}">Geöffnet ab:</div>
						                </td>
						                <td>
						                    <d:DateBox ui:field="dateOpen"/>
						                </td>
						            </tr>
						      <tr id="dateClosed">
						                <td>
						                    <div class="{style.label}">Geschlossen ab:</div>
						                </td>
						                <td>
						                    <d:DateBox ui:field="dateClosed"/>
						                </td>
						            </tr>
						      <tr id="place">
						                <td>
						                    <div class="{style.label}">Findet statt in:</div>
						                </td>
						                <td>
						                    <g:TextBox ui:field="place"/>
						                </td>
						            </tr>

						      <tr id="isClosed">
						                <td>
						                    <div class="{style.label}">Ist geschlossen:</div>
						                </td>
						                <td>
						                    <g:CheckBox ui:field="isClosed"/>
						                </td>
						            </tr>
	
						      <tr id="mc">
						                <td>
						                    <div class="{style.label}">Gehört zu MC:</div>
						                </td>
						                <td>
						                    <g:ValueListBox ui:field="mc"/>
						                </td>
						            </tr>
						      <tr id="repeFor">
						                <td>
						                    <div class="{style.label}">Repeprüfung für:</div>
						                </td>
						                <td>
						                    <g:ValueListBox ui:field="repeFor"/>
						                </td>
						            </tr>
						      <tr id="percentSameQuestion">
						                <td>
						                    <div class="{style.label}">Prozent gleicher Frage:</div>
						                </td>
						                <td>
						                    <g:IntegerBox ui:field="percentSameQuestion"/>
						                </td>
						            </tr>
						            
						            <tr id="logo">
                <td>
                    <div class="{style.label}">Logo:</div>
                </td>
                <td>
                    <g:TextBox ui:field="logo"/>
                </td>
            </tr>
						    </table>
					</td>
				</tr>
			</table>
			
			</div>

  </g:HTMLPanel>
</ui:UiBinder> 
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
		xmlns:b="urn:import:com.google.gwt.user.cellview.client"
		xmlns:a="urn:import:medizin.client.managed.ui">
	
	<ui:style>
    .panelHTML {
       border: 0px solid #ddf;
       height: 100%;
       width: 100%;
     }
    .fields {
      margin-top: 0.5em;
      margin-left: 1em;
    }
    .label {
      min-height: 25px;
      font-weight: bold;
    }
    .button {
      margin-right: 1em;
    }
    .bar {
      margin-left: 1em;
    }
    .header {
      margin-left: 1em;
      color: #4B4A4A;
      text-shadow: #ddf 1px 1px 0;
      margin-bottom: 0;
    }
    .underline {
      border-bottom: 2px solid #6F7277;
    }
	</ui:style>
	<g:HTMLPanel>
     <div class="{style.underline}">    
      <h3 class="{style.header}" ui:field="editTitle">
        <ui:msg>Edit QuestionSumPerPerson</ui:msg>
      </h3>
      <h3 class="{style.header}" ui:field="createTitle">
                <ui:msg>New QuestionSumPerPerson</ui:msg>
            </h3>
    </div>


    <table class="{style.fields}" id="boundElementHolder">
      
      
      
      
    <tr id="responsiblePerson">
                <td>
                    <div class="{style.label}">Responsible Person:</div>
                </td>
                <td>
                    <g:ValueListBox ui:field="responsiblePerson"/>
                </td>
            </tr>
            <tr id="questionEvent">
                <td>
                    <div class="{style.label}">Question Event:</div>
                </td>
                <td>
                    <g:ValueListBox ui:field="questionEvent"/>
                </td>
            </tr>

            <tr id="questionSum">
                <td>
                    <div class="{style.label}">Question Sum:</div>
                </td>
                <td>
                    <g:IntegerBox ui:field="questionSum"/>
                </td>
            </tr>

        </table>

    <div class="{style.bar}">
      <g:Button addStyleNames="{style.button}" ui:field="save">Speichern</g:Button>
      <g:Button addStyleNames="{style.button}" ui:field="closeButton">Abbrechen</g:Button>
    </div>
	</g:HTMLPanel>
</ui:UiBinder> 
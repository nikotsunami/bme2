<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
		xmlns:b="urn:import:com.google.gwt.user.cellview.client">
	
	<ui:style>
  .panelHTML {
       border: 0px solid #ddf;
       height: 100%;
       width: 1200px;
     }
      .controls {
    position: absolute;
    left:0;
    right:0;
    top:9px;
    height: 2em;
    margin-left: 15px;
    margin-top: 25px;
        margin-right: 10px;
  }
 
  .controls table {
    position:absolute;
    right:0;
    top:0;
  }
  .controls button {
    display:inline;
  }
  .listView {
    position: relative;
  }
    .scroll1 {
    width: 100%;
  }
  .listView &gt; table {
    table-layout:fixed;
  }
  .listView &gt; table td {
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
    cursor: pointer;
  }
  
  		.bar {
		

		float: right;
		width: 100%;
		background-color: #E6EDED;

		}
		  		.right {
		

		float: right;
margin: 3px;

		}
	</ui:style>
	<g:HTMLPanel>
			   <div style="height:3em;"/>
		    <b:CellTable pageSize="8" ui:field="tableEvent" width="100%"/>
		    <div class="{style.controls}"> 
		    	<g:ListBox ui:field="searchInstitution"></g:ListBox>
		    	<g:ListBox ui:field="searchEvent"></g:ListBox>
		       <g:TextBox ui:field="searchQuestion"></g:TextBox>
		       <g:CheckBox ui:field="checkQuestiontext">Fragentext</g:CheckBox>
		       <g:CheckBox ui:field="checkKeywords">Keywords</g:CheckBox>
		      <b:SimplePager display="{tableEvent}" location="RIGHT"/>
		    </div>
		    <div style="height:3em;"/><div  class="{style.bar}">
	<g:Button ui:field="closeButton"  addStyleNames="ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only {style.right}" >Schliessen</g:Button>
	</div>
	</g:HTMLPanel>
</ui:UiBinder> 
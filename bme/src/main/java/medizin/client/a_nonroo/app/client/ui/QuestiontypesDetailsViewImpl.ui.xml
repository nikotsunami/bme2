<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:n="urn:import:medizin.client.a_nonroo.app.client">
	<ui:style>
   .panelHTML {
		border: 0px solid #ddf;
		height: 100%;
		width: 100%;
		}
		.fields {
		margin: 0.5em;
		padding-right: 1em;


		}
		.label {
		min-height: 25px;
		font-weight: bold;

		}
				.label2 {

			float: left;
		}
		.button {
		margin-left: 0.5em;
		float: right;
		background: none;

		cursor: pointer;
		}

		.header {
		padding: 3px;
		color: #4B4A4A;
		text-shadow: #ddf 1px
		1px 0;
		margin-bottom: 0;
		background-color: #E6EDED;
		font-size: 1.2em;
		font-weight: bold;

		}
		.underline {
		border-bottom: 1px solid #6F7277;
		}
		.boundary{
		padding-left:
		10px;
		padding-right: 10px;
		}

		.bar {
		padding: 3px;


		background-color:
		#E6EDED;

		}
		.details {

		border: 1px solid #E6EDED;
		width:
		100%;

		}
		
				.trenner {

		border-bottom: 1px solid #E6EDED;
	

		}
	</ui:style>
<g:HTMLPanel>

<div class="{style.boundary}">
			<table class="{style.details}" cellpadding="0" cellspacing="0">



				<tr>
					<td class="{style.header}">	
									<span>Fragetyp Name:</span>
									<span ui:field="questionTypeName"/>
									
					</td>
					<td class="{style.bar}">
						<div>
							<g:Button addStyleNames="{style.button}" ui:field="edit">
								<span class="ui-icon ui-icon-pencil" style="float: left; margin-right: 0.3em;"></span>
								Fragetyp bearbeiten
							</g:Button>
							<g:Button addStyleNames="{style.button}" ui:field="delete">
								<span class="ui-icon ui-icon-trash" style="float: left; margin-right: 0.3em;"></span>
								Fragetyp l√∂schen
							</g:Button>
						</div>
					</td>
				</tr>
				<tr>
					<td colspan="2">


							 <table class="{style.fields}" id="boundElementHolder">
						     
						     
						      <tr id="isWeil">
						                <td>
						                    <span class="{style.label}">Ist eine Weil-Frage:</span>
						                </td>
						                <td>
						                    <span ui:field="isWeil"/>
						                </td>
						            </tr>
						      <tr id="trueAnswers">
						                <td>
						                    <span class="{style.label}">Anzahl wahre Antworten:</span>
						                </td>
						                <td>
						                    <span ui:field="trueAnswers"/>
						                </td>
						            </tr>
						      <tr id="falseAnswers">
						                <td>
						                    <span class="{style.label}">Anzahl falsche Antworten:</span>
						                </td>
						                <td>
						                    <span ui:field="falseAnswers"/>
						                </td>
						            </tr>
						      <tr id="sumAnswers">
						                <td>
						                    <span class="{style.label}">Summe der Antworten:</span>
						                </td>
						                <td>
						                    <span ui:field="sumAnswers"/>
						                </td>
						            </tr>
						      <tr id="maxLetters">
						                <td>
						                    <span class="{style.label}">Maximale Anzahl Buchstaben:</span>
						                </td>
						                <td>
						                    <span ui:field="maxLetters"/>
						                </td>
						            </tr>
						    </table>

					</td>
				</tr>
			</table>


		</div>


  </g:HTMLPanel>
</ui:UiBinder> 